<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CommodityMapper">
    <insert id="insertCommodity">
        insert into commodity(commodity_number, name, price) values (#{commodityNumber},#{name},#{price})
    </insert>
    <delete id="deleteCommodityByNumber">
        delete from commodity where commodity_number=#{commodityNumber}
    </delete>
    <update id="updateCommodity">
        update commodity
        <set>
            update_time = now(),
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where commodity_number = #{commodityNumber}
    </update>
    <select id="selectCommodityByPage" resultType="Commodity">
        select * from commodity Limit #{pageNumber} Offset #{offect}
    </select>
    <select id="selectCommodityPriceByNumber" resultType="double">
        select price from commodity where commodity_number=#{commodityNumber}
    </select>
</mapper>